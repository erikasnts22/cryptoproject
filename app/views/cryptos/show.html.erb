<% for x in @show_crypto['data'] %>
  <% if @crypto.symbol.upcase == x['symbol'] %>
      <% crypto_name = x['name'] %>
      <% crypto_price = number_with_precision(x['quote']['USD']['price'], :precision => 5, :delimiter => ',') %>
      <% crypto_rank = x['cmc_rank'] %>
  <% end %>
<% end %>

<div class="card">
  <div class="card-header">
    <h3><%= crypto_name %></h3>
  </div>

  <div class="card-body">
    <h1><%= @crypto.symbol.upcase %></h1>

  <p>
    <strong>Current Price: </strong><%= number_to_currency(crypto_price) %>
  </p>

  <p>
    <strong>Rank: </strong><%= crypto_rank %>
  </p>

  <p>
    <strong>Cost per: </strong><%= number_to_currency(@crypto.cost_per) %>
  </p>

  <p>
    <strong>Amount owned: </strong><%= number_to_currency(@crypto.amount_owned) %>
  </p>
  </div>

  <div class="card-footer">
  <%= link_to 'Edit', edit_crypto_path(@crypto) %> |
  <%= link_to 'Delete', crypto_path(@crypto), method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Back', cryptos_path %>
  </div>
</div>

